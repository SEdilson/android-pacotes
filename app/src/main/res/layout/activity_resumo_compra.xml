<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ResumoCompraActivity">

    <ImageView
        android:id="@+id/activity_resumo_compra_banner"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/activity_resumo_compra_parabens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="ParabÃ©ns!"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/activity_resumo_compra_banner"
        app:layout_constraintStart_toStartOf="@id/activity_resumo_compra_banner"
        app:layout_constraintTop_toTopOf="@id/activity_resumo_compra_banner" />

    <TextView
        android:id="@+id/activity_resumo_compra_mensagem_sucesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compra realizada com sucesso :)"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@id/activity_resumo_compra_parabens"
        app:layout_constraintStart_toStartOf="@id/activity_resumo_compra_parabens"
        app:layout_constraintTop_toBottomOf="@id/activity_resumo_compra_parabens" />

    <TextView
        android:id="@+id/activity_resumo_compra_mensagem_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Confira o resumo da compra:"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/activity_resumo_compra_banner"
        app:layout_constraintStart_toStartOf="@id/activity_resumo_compra_banner"
        app:layout_constraintTop_toBottomOf="@id/activity_resumo_compra_banner" />

    <ImageView
        android:id="@+id/activity_resumo_compra_imagem_pacote"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_resumo_compra_mensagem_descricao"
        tools:srcCompat="@drawable/recife_pe" />

    <TextView
        android:id="@+id/activity_resumo_compra_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_resumo_compra_imagem_pacote"
        tools:text="Recife" />

    <TextView
        android:id="@+id/activity_resumo_compra_periodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/activity_resumo_compra_local"
        app:layout_constraintTop_toBottomOf="@id/activity_resumo_compra_local"
        tools:text="08/12 - 10/12 de 2020" />

    <TextView
        android:id="@+id/activity_resumo_compra_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/activity_resumo_compra_periodo"
        app:layout_constraintTop_toBottomOf="@id/activity_resumo_compra_periodo"
        tools:text="R$ 243,99" />
</androidx.constraintlayout.widget.ConstraintLayout>